<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#4A120E8A" />
            <gradient android:angle="-90" android:startColor="#4A0E07E4" android:endColor="#4A2923D3"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4A120E8A" />
            <solid android:color="#4A433EDA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#4A120E8A" />
            <gradient android:angle="-90" android:startColor="#4A120E8A" android:endColor="#4A120E8A" />
        </shape>
    </item>

</selector>